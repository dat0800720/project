<tbody>
  <tr>
    <td><%= holiday.name %></td>
    <% if current_user&.admin? %>
      <td class="project-actions text-right">
        <%= link_to edit_holiday_path(holiday), class: "btn btn-primary btn-sm" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to holiday, class: "btn btn-primary btn-sm", method: :delete, data: { confirm: t("boby.are_you_sure?") } do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </td>
    <% end %>
  </tr>
</tbody>
