<tbody>
    <tr class="tr-shadow">
        <td><%= link_to holiday.name, holiday %></td>
        <% if current_user&.admin? %>
          <td>
              <div class="table-data-feature">
                  <button class="item" data-toggle="tooltip" data-placement="top" title="Edit">
                      <%= link_to '<i class="zmdi zmdi-edit"></i>'.html_safe, edit_holiday_path(holiday) %>
                  </button>
                  <button class="item" data-toggle="tooltip" data-placement="top" title="Delete">
                      <%= link_to '<i class="zmdi zmdi-delete"></i>'.html_safe, holiday, method: :delete, data: { confirm: "bạn chắc chứ?" } %>
                  </button>
              </div>
          </td>
        <% end %>
    </tr>
    <tr class="spacer"></tr>
</tbody>
