<!DOCTYPE html>
<html>
  <head>
    <title>Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Fontfaces CSS-->
    <link rel="stylesheet" href="https://colorlib.com/polygon/cooladmin/vendor/font-awesome-4.7/css/font-awesome.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
    <link href="https://colorlib.com/polygon/cooladmin/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.min.css">

    <!-- CoolAdmin-master/Vendor CSS-->
    <link href="https://colorlib.com/polygon/cooladmin/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="https://colorlib.com/polygon/cooladmin/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="https://colorlib.com/polygon/cooladmin/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="https://colorlib.com/polygon/cooladmin/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="https://colorlib.com/polygon/cooladmin/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="https://colorlib.com/polygon/cooladmin/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="https://colorlib.com/polygon/cooladmin/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">
  </head>

  <body class="animsition">
    <div class="page-wrapper">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <%= render "layouts/header_admin" %>
          <% else %>
            <%= render "layouts/header_staff" %>
            <div class="page-content--bgf7">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
              <%= yield %>
            </div>
          <% end %>
        <% else %>
        <%= render "layouts/header" %>
        <div class="layouts/header_staff">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <%= yield %>
        </div>
        <% end %>
    </div>
    <script src="https://colorlib.com/polygon/cooladmin/vendor/animsition/animsition.min.js"></script>
    <!-- Main JS-->
    <script src="https://colorlib.com/polygon/cooladmin/js/main.js"></script>
    <script>
      function openNav() {
        document.getElementById("sidebar").style.width = "300px";
        document.getElementById("test").style.paddingLeft = "300px";
        document.getElementById("test2").style.left = "300px";
        document.getElementById("sidebarCollapse2").style.display = "none";
        document.getElementById("sidebarCollapse1").style.display = "block";
      }

      function closeNav() {
        document.getElementById("sidebar").style.width = "0";
        document.getElementById("test").style.paddingLeft= "0";
        document.getElementById("test2").style.left= "0";
        document.getElementById("sidebarCollapse1").style.display = "none";
        document.getElementById("sidebarCollapse2").style.display = "block";
      }
    </script>
  </body>
</html>
