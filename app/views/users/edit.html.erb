<%= form_for(@user) do |f| %>
  <%= render "devise/shared/error_messages", resource: @user%>
  <div class="page-wrapper">
    <div class="page-content--bge5">
      <div class="container">
        <div class="login-wrap">
          <div class="login-content">
            <div class="login-logo">
              <h2>Edit <%= @user.name %></h2>
            </div>
            <div class="login-form">
              <form action="" method="post">
                <label>Ảnh bìa:</label>
                <span class="image">
                  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %>
                </span>
                <div class="form-group">
                  <label>Username</label>
                  <%= f.text_field :name, class:"au-input au-input--full", placeholder:"Username", autofocus: true, autocomplete: "name" %>
                </div>
                <div class="form-group">
                  <label>Email Address</label>
                  <%= f.email_field :email, class:"au-input au-input--full", placeholder:"Email" %>
                </div>
                <% if current_user.admin? %>
                  <div class="form-group">
                    <label>User Type</label>
                    <%= f.select :user_type, options_for_select([["admin", "admin"], ["staff", "staff"]], f.object.user_type),{}, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <label>Status</label>
                    <%= f.select :status,  Constant::STATUS.invert, class:"form-control"%>
                  </div>
                  <div class="form-group">
                    <label>Liên lạc chính</label>
                    <%= f.text_field :notes, class:"au-input au-input--full", placeholder:"Liên lạc chính" %>
                  </div>
                  <div class="form-group">
                    <label>Password </label>
                    <%= f.password_field :password, class:"au-input au-input--full", placeholder:"New Password" %>
                  </div>
                  <div class="form-group">
                    <label>Password Confirmation</label>
                    <%= f.password_field :password_confirmation, class:"au-input au-input--full", placeholder:"New Password Confirmation" %>
                  </div>
                <% end %>
                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Update</button>
              </form>
              <div class="register-link">
                <p>
                  Bạn muốn quay trở lại?
                  <%= link_to "Back", :back %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
