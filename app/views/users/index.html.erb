<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-12">
        <h1><%= t("user.manage") %></h1>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="card ml-4 mr-4">
    <div class="card-header">
      <%= search_form_for @search, class: "form-inline" do |f| %>
        <div class="input-group rounded col-md-12 center">
          <div class="col-md-3">
            <label><%= t("user.user_name") %></label>
            <%= f.text_field :name_cont, class: "form-control width_full" %>
          </div>
          <div class="col-md-3">
            <label>email</label>
            <%= f.text_field :email_cont, class: "form-control width_full" %>
          </div>
          <div class="col-md-3">
            <label><%= t("user.user_type") %></label>
            <%= f.select :user_type_eq, select_type("user.search_user_type") %> 
          </div>
          <div class="col-md-2">
            <label><%= t("user.status") %></label>
            <%= f.select :status_eq, Constant::STATUS.invert %>
          </div>
          <div class="col-md-1">
            <h3 style="height:25%"></h3>
            <%= f.submit t("boby.search"), class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-body p-0">
      <table class="table table-striped projects">
        <thead>
          <tr>
            <th>id</th>
            <th><%= t("user.user_name") %></th>
            <th>email</th>
            <th><%= t("user.user_type") %></th>
            <th><%= t("user.status") %></th>
            <th class="text-right"><%= t("boby.action") %></th>
          </tr>
        </thead>
        <%= render @users%>
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
</section>
<!-- /.content -->
<% if User.count > 10 %>
  <div style="width: 30%; margin: auto !important;">
    <%== pagy_bootstrap_nav(@pagy) %> 
  </div>
<% end %>
