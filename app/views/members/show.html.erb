
<!-- Profile widget -->
<div class="bg-white shadow rounded overflow-hidden">
    <div class="px-4 pt-0 pb-4 bg-dark">
        <div class="media align-items-end profile-header">

          <div class="profile mr-3" style="width: 20%">
            <div class="rounded mb-2 img-thumbnail " style="width: 100%">
              <%= image_tag @member.user.image if @member.user.image.attached? %>
            </div>
            <div style="display: flex">
              <%= link_to 'Edit Member', edit_member_path(@member), class: "btn btn-dark btn-sm width50" %>
              <%= link_to 'Delete', @member, method: :delete, data: { confirm: "bạn chắc chứ?" }, class:"btn btn-dark btn-sm width50" %>
            </div>
          </div>
          <div class="media-body mb-5 text-white">
              <h4 class="mt-0 mb-0"><%= @member.user.name %></h4>
              <p class="small mb-4"> <%= @member.user.email %></p>
          </div>
        </div>
    </div>

    <div class="bg-light p-4 d-flex justify-content-end text-center">
        <ul class="list-inline mb-0">
            <li class="list-inline-item">
                <h5 class="font-weight-bold mb-0 d-block">241</h5><small class="text-muted"> <i class="fa fa-picture-o mr-1"></i>Photos</small>
            </li>
            <li class="list-inline-item">
                <h5 class="font-weight-bold mb-0 d-block">84K</h5><small class="text-muted"> <i class="fa fa-user-circle-o mr-1"></i>Followers</small>
            </li>
        </ul>
    </div>
      <div style= "display:flex">
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-4">
              <h6 class="mb-0"> Họ và tên </h6>
            </div>
            <div class="col-sm-8 text-secondary">
              <%= @member.name %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-4">
              <h6 class="mb-0">Mã thành viên</h6>
            </div>
            <div class="col-sm-8 text-secondary">
              <%= @member.employee_code %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-4">
              <h6 class="mb-0">Ngày sinh</h6>
            </div>
            <div class="col-sm-8 text-secondary">
              <%= @member.bithday.strftime("%d/%m/%Y") %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-4">
              <h6 class="mb-0">Quốc tịch</h6>
            </div>
            <div class="col-sm-8 text-secondary">
              <%= @member.nationality %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-4">
              <h6 class="mb-0">Dân tộc</h6>
            </div>
            <div class="col-sm-8 text-secondary">
              <%= @member.nation %>
            </div>
          </div>
          <hr>
