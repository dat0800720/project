<%= form_for(@member) do |f| %>
  <%= render "devise/shared/error_messages", resource: @member %>
  <div style= "display:flex">
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0"> Họ và tên </h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :name, class:"form-control", placeholder:"Họ và tên", autofocus: true, autocomplete: "name" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Mã thành viên</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :employee_code, class:"form-control", placeholder:"Mã thành viên" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Ngày sinh</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.date_field :bithday, class:"form-control", placeholder:"Ngày sinh" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Quốc tịch</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :nationality, class:"form-control", placeholder:"Quốc tịch" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Dân tộc</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :nation, class:"form-control", placeholder:"Dân tộc" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Tôn giáo</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :religion, class:"form-control", placeholder:"Tôn giáo" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Giới tính</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.select :sex,  Constant::SEX.invert%>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Quê quán</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :home_town, class:"form-control", placeholder:"Quê quán" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Địa chỉ thường trú</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :permanent_address, class:"form-control", placeholder:"Địa chỉ thường trú" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Nơi ở hiện nay</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :current_address, class:"form-control", placeholder:"Nơi ở hiện nay" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Tình trạng hôn nhân</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :marriage, class:"form-control", placeholder:"Tình trạng hôn nhân" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Trạng thái làm việc</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.select :work_status,  Constant::WORK_STATUS.invert %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0"> Số chứng minh nhân dân</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :identity_card, class:"form-control", placeholder:"Số chứng minh nhân dân" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Ngày cấp</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.date_field :date_issued, class:"form-control", placeholder:"Ngày cấp" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Nơi cấp</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :issued_at, class:"form-control", placeholder:"Nơi cấp" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Thâm niên làm việc</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :seniority, class:"form-control", placeholder:"Thâm niên làm việc" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Người giới thiệu</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :presenter, class:"form-control", placeholder:"Người giới thiệu" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Số tài khoản ngân hàng</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :bank_account, class:"form-control", placeholder:"Số tài khoản ngân hàng" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Tên tài khoản ngân hàng</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :bank_name, class:"form-control", placeholder:"Tên tài khoản ngân hàng" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Biển số xe</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :license_plates, class:"form-control", placeholder:"Biển số xe" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Hãng xe</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :vehicle_brand, class:"form-control", placeholder:"Hãng xe" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Màu xe</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :vehicle_color, class:"form-control", placeholder:"Màu xe" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Số điện thoại</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :phone_number, class:"form-control", placeholder:"Số điện thoại" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-3">
              <h6 class="mb-0">Số điện thoại người thân</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= f.text_field :relatives_phone, class:"form-control", placeholder:"Số điện thoại người thân" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6", style="margin: auto;">
    <%= f.submit "submit", class:"btn btn-success w-100 mb-5" %>
  </div>
<% end %>
