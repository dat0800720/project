<div class="row m-t-30">
  <div class="table-data__tool-right" style= "padding-left: 40px; margin-bottom: 50px">
    <button class="au-btn au-btn-icon au-btn--green au-btn--small"><%= link_to '<i class="zmdi zmdi-plus"></i>Thêm thành viên'.html_safe, new_member_path %></button>
  </div>
  <div class="col-md-9">
    <!-- DATA TABLE-->
    <div class="table-responsive m-b-40">
      <table class="table table-borderless table-data3">
        <thead>
          <tr>
            <th>Họ và tên</th>
            <th>Mã thành viên</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Quê quán</th>
            <th>Số điện thoại</th>
            <th>Trạng thái làm việc</th>
            <% if current_user&.admin? %>
              <th>thao tác</th>
            <%end%>
          </tr>
        </thead>
        <%= render @members%>
      </table>
    </div>
      <!-- END DATA TABLE-->
  </div>
  <div class="col-lg-3" style= "padding-right: 30px;">
    <div class="card">
      <div class="card-header">
        <strong>Filter</strong> Form
      </div>
      <%= search_form_for @search, class: "form-inline" do |f| %>
        <div class="card-body card-block">
          <div class="has-success form-group">
            <%= f.label :name_cont, 'Họ và tên:', class: " form-control-label" %>
            <%= f.text_field :name_cont, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="has-success form-group">
            <%= f.label :employee_code_cont, 'Mã thành viên:', class: " form-control-label" %>
            <%= f.text_field :employee_code_cont, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="has-success form-group">
            <%= f.label :sex_eq, 'Giới tính:', class: " form-control-label" %>
            <%= f.select :sex_eq, Constant::SEX.invert, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="has-success form-group">
            <%= f.label :bithday_cont, 'Ngày sinh:', class: " form-control-label" %>
            <%= f.date_field :bithday_cont, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="has-success form-group">
            <%= f.label :identity_card_cont, 'Số CMND:', class: " form-control-label" %>
            <%= f.text_field :identity_card_cont, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="has-warning form-group">
            <%= f.label :home_town_cont, 'Quê quán:', class: " form-control-label" %>
            <%= f.text_field :home_town_cont, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="has-warning form-group">
            <%= f.label :phone_number_cont, 'Điện thoại:', class: " form-control-label" %>
            <%= f.text_field :phone_number_cont, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="has-warning form-group">
            <%= f.label :work_status_eq, 'Trạng thái:', class: " form-control-label" %>
            <%= f.select :work_status_eq, Constant::WORK_STATUS.invert, class:"is-valid form-control-success form-control" %>
          </div>
          <div class="col-sm-6", style="margin: auto; padding-top: 30px">
            <%= f.submit "submit", class:"au-btn au-btn--block au-btn--green m-b-20" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div style="width: 30%; margin: auto !important;">
  <%== pagy_bootstrap_nav(@pagy) %>  
</div>
