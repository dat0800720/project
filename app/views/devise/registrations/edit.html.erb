<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-10 m-auto">
          <h1 style="text-align: center"><%= t("header.change_the_password") %></h1>
        </div>
      </div>
    </div>
  </section>
  <section class="content">
    <%= render "devise/shared/error_messages", resource: resource%>
    <div class="row">
      <div class="col-md-10 m-auto">
        <div class="card card-secondary">
          <div class="card-header">
            <h3 class="card-title"><%= t("member.member") %></h3>
          </div>
          <div class="card-body">
            <div class="form-group">
              <label><%= t("user.current_user") %></label>
              <%= f.password_field :current_password, class: "form-control", placeholder:t("user.current_user"), autofocus: true, autocomplete: "name" %>
            </div>
            <div class="form-group">
              <label><%= t("user.password") %></label>
              <%= f.password_field :password, class: "form-control", placeholder:t("user.password") %>
            </div>
            <div class="form-group">
              <label><%= t("user.password_confirmation") %></label>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder:t("user.password_confirmation") %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-10 m-auto">
        <%= link_to t("boby.back"), members_path, class: "btn btn-secondary" %>
        <%= f.submit t("boby.submit"), class: "btn btn-success float-right" %>
      </div>
    </div>
  </section>
<% end %>
