<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="page-wrapper">
    <div class="page-content--bge5">
      <div class="container">
        <div class="login-wrap">
          <div class="login-content">
            <div class="login-logo">
              <h2>Create <%= resource_name.to_s.humanize %></h2>
            </div>
            <div class="login-form">
              <form action="" method="post">
                <div class="form-group">
                  <label>Username</label>
                  <%= f.text_field :name, class:"au-input au-input--full", placeholder:"Username", autofocus: true, autocomplete: "name" %>
                </div>
                <div class="form-group">
                  <label>Email Address</label>
                  <%= f.email_field :email, class:"au-input au-input--full", placeholder:"Email" %>
                </div>
                <div class="form-group">
                  <label>Password <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %></label>
                  <%= f.password_field :password, class:"au-input au-input--full", placeholder:"Password" %>
                </div>
                <div class="form-group">
                  <label>Password Confirmation</label>
                  <%= f.password_field :password_confirmation, class:"au-input au-input--full", placeholder:"Password Confirmation" %>
                </div>
                <div class="login-checkbox">
                  <label>
                      <input type="checkbox" name="aggree">Đồng ý các điều khoản và chính sách
                  </label>
                </div>
                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Đăng Ký</button>
              </form>
              <div class="register-link">
                <p>
                  Bạn đã có tài khoản?
                  <%= link_to "Đăng nhập", new_user_session_path%>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
