<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<body class="hold-transition login-page">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <h3><b><%= t("log_in.new_password") %></b></h3>
      </div>
      <div class="card-body">
        <p class="login-box-msg"><%= t("log_in.content_change_password") %></p>
        <div class="input-group mb-3">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", placeholder: t("log_in.new_password") %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: t("log_in.confirm_password") %>
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <button type="submit" class="btn btn-primary btn-block"><%= t("log_in.change_password") %></button>
          </div>
          <!-- /.col -->
        </div>
        <p class="mt-3 mb-1">
          <%= link_to t("log_in.sign_in"), new_user_session_path %>
        </p>
      </div>
      <!-- /.login-card-body -->
    </div>
  </div>
</body>
<% end %>
