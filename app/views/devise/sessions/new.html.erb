<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <% if devise_mapping.rememberable? %>
    <div class="page-wrapper">
      <div class="page-content--bge5">
        <div class="container">
          <div class="login-wrap">
            <div class="login-content">
              <div class="login-logo">
                <img src="images/icon/logo.png" alt="CoolAdmin">
              </div>
              <div class="login-form">
                <form action="" method="post">
                  <div class="form-group">
                    <label>Email Address</label>
                    <%= f.email_field :email, autofocus: true, class: "au-input au-input--full", placeholder:"Email", autocomplete: "email" %>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <%= f.password_field :password, class: "au-input au-input--full", placeholder:"Password", autocomplete: "current-password" %>
                  </div>
                  <div class="login-checkbox">
                    <label>
                      <%= f.check_box :remember_me %>Remember Me
                    </label>
                    <label>
                      <%= link_to "Tìm lại mật khẩu?", new_password_path(resource_name) %>
                    </label>
                  </div>
                  <%= f.submit "Đăng nhập", class:"au-btn au-btn--block au-btn--green m-b-20" %>
                </form>
                <div class="register-link">
                  <p>
                    Don't you have account?
                    <%= link_to "Đăng ký", new_user_registration_path%>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>  
  <% end %>
<% end %>